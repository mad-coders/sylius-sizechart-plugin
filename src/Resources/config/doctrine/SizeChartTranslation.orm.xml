<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Madcoders\SyliusSizechartPlugin\Entity\SizeChartTranslation" table="madcoders_size_chart_translation">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" nullable="true" type="string" />
        <field name="description" column="description" nullable="true" type="text" />

        <field name="filePath" column="file_path" nullable="true" type="string" />

    </mapped-superclass>
</doctrine-mapping>
